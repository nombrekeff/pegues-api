datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String   
  firstname String?
  lastname  String?
  zones     Zone[]
  routes    Route[]
  role      Role
}

model Zone {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String   @unique
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
  routes    Route[]
}

model Route {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name        String   
  description String?   
  grade       Grade     @default(uknown)

  ascentAt    DateTime?
  sessions    Int       @default(0)
  tries       Int       @default(0)

  author      User?     @relation(fields: [authorId], references: [id])
  authorId    String?

  zone        Zone?     @relation(fields: [zoneId], references: [id])
  zoneId      String?
}

enum Role {
  ADMIN
  USER
}

enum Grade {
  uknown
  g3
  g4
  g5

  g6A
  g6AP
  g6B
  g6BP
  g6C
  g6CP

  g7A
  g7AP
  g7B
  g7BP
  g7C
  g7CP

  g8A
  g8AP
  g8B
  g8BP
  g8C
  g8CP

  g9A
  g9AP
}